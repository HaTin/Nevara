@using Nevara.ApplicationCore.Extensions
<!DOCTYPE html>
<html lang="en">
<mini-profiler />
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/admin-client/assets/images/favicon.png">
    <title>@ViewData["Title"] </title>
    <!-- Bootstrap Core CSS -->
    <link href="/admin-client/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- morris CSS -->
    <link href="/admin-client/assets/plugins/morrisjs/morris.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/admin-client/css/style.css" rel="stylesheet">
    <!-- You can change the theme colors from here -->
    <link href="/admin-client/css/colors/blue.css" id="theme" rel="stylesheet">
    @RenderSection("css", false)
