        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            @RenderBody()
            <footer class="footer"> © 2017 Admin Press Admin by themedesigner.in </footer>
        </div>

