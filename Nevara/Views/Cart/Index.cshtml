
@{
    ViewData["Title"] = "Cart";
}
@section Scripts
    {
    <script src="~/npm/mustache.min.js"></script>
    <script src="~/app/cart/cart.js"></script>
    <script>
        const cart = new CartController();
        cart.init();
    </script>
}
<div class="main-breadcrumb mb-100">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="breadcrumb-content text-center ptb-70">
                    <ul class="breadcrumb-list breadcrumb">
                        <li><a href="#">home</a></li>
                        <li><a href="#">cart</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Container End -->
</div>
<!-- Page Breadcrumb End -->
<!-- cart-main-area & wish list start -->
<div class="cart-main-area pb-100">
    <div class="container">
        <!-- Section Title Start -->
        <div class="section-title mb-50">
            <h4 style="color: crimson">@TempData["Failed"]</h4>
            <h2>cart</h2>
        </div>
        <!-- Section Title Start End -->
        <div id="cart-content" class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <!-- Form Start -->
                <form action="#">
                    <!-- Table Content Start -->
                    <div class="table-content table-responsive mb-50">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-thumbnail">Image</th>
                                    <th class="product-name">Product</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-subtotal">Total</th>
                                    <th class="product-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody id="cart-table"></tbody>
                        </table>
                        <script id="template-cart" type="x-tmpl-mustache">
                            <tr>
                                <td class="product-thumbnail">
                                    <a href="{{Url}}"><img src="{{Thumbnail}}" alt="cart-image"></a>
                                </td>
                                <td class="product-name"><a href="#">{{Name}}</a></td>
                                <td class="product-price"><span class="amount">{{Price}}</span></td>
                                <td class="product-quantity"><input min="1" class="txtQuantity" type="number" data-id="{{ProductId}}" value="{{Quantity}}"></td>
                                <td class="product-subtotal">{{Total}}</td>
                                <td class="product-remove"> <a class="btn-delete" data-id="{{ProductId}}" href="#"><i class="fa fa-times" aria-hidden="true"></i></a></td>
                            </tr>
                        </script>
                    </div>
                    <!-- Table Content Start -->
                    <div class="row">
                        <!-- Cart Button Start -->
                        <div class="col-md-8 col-sm-7 col-xs-12">
                            <div class="buttons-cart">                           
                                <a href="/home">Continue Shopping</a>
                            </div>
                        </div>
                        <!-- Cart Button Start -->
                        <!-- Cart Totals Start -->
                        <div class="col-md-4 col-sm-5 col-xs-12">
                            <div class="cart_totals">
                                <h2>Cart Totals</h2>
                                <br>
                                <table>
                                    <tbody>                          
                                        <tr class="order-total">
                                            <th>Total</th>
                                            <td>
                                                <strong><span class="amount" id="lblTotalAmount"></span></strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="wc-proceed-to-checkout">
                                    <a href="/cart/checkout">Proceed to Checkout</a>
                                </div>
                            </div>
                        </div>
                        <!-- Cart Totals End -->
                    </div>
                    <!-- Row End -->
                </form>
                <!-- Form End -->
            </div>
        </div>
        <!-- Row End -->
    </div>
</div>
